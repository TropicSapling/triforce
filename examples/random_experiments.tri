// Original definition
macro func if $cond then $tbody else $fbody {
	code {
		func if (True)  then $tbody else $fbody {tbody()}
		func if (False) then $tbody else $fbody {fbody()}

		if $$(cond) then
			() => $$(tbody)
		else
			() => $$(fbody)
	}
}

